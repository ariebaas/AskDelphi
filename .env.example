# ============================================================================
# AUTHENTICATION CONFIGURATION (CMS URL Only Approach - RECOMMENDED)
# ============================================================================
# This is the ONLY configuration needed for production use with token caching.
# Tenant, project, and ACL are automatically extracted from the CMS URL.

# Authentication Mode
# Set to "cache" to use CMS URL + Portal Code (Daan's mechanism - RECOMMENDED)
# Set to "traditional" only if you have an API key and no CMS URL
ASKDELPHI_AUTH_MODE=cache

# CMS URL (REQUIRED for cache mode)
# Copy the full URL from your browser when viewing a Digital Coach page
# Format: https://company.askdelphi.com/cms/tenant/{TENANT_ID}/project/{PROJECT_ID}/acl/{ACL_ENTRY_ID}/...
# Example: https://company.askdelphi.com/cms/tenant/abc-123/project/def-456/acl/ghi-789/page
ASKDELPHI_CMS_URL=https://company.askdelphi.com/cms/tenant/abc-123/project/def-456/acl/ghi-789/page

# Portal Code (REQUIRED for cache mode - ONE-TIME USE ONLY)
# Get this from the Mobile tab in AskDelphi
# After first successful authentication, this is no longer needed (tokens are cached)
ASKDELPHI_PORTAL_CODE=ABC123-XYZ789

# Base URL for API calls (REQUIRED)
# This is extracted from the CMS URL but can be overridden if needed
ASKDELPHI_BASE_URL=https://api.example.com

# NT Account (REQUIRED for both modes)
# User identifier for audit trail and authorization
# Format: username or domain\username
ASKDELPHI_NT_ACCOUNT=john.doe

# ============================================================================
# OPTIONAL: Traditional Mode Configuration
# ============================================================================
# ONLY use these if ASKDELPHI_AUTH_MODE=traditional
# For production, use cache mode above instead

# ASKDELPHI_API_KEY=your-api-key-here
# ASKDELPHI_TENANT_ID=tenant-123
# ASKDELPHI_PROJECT_ID=project-456
# ASKDELPHI_ACL=acl-789

# ============================================================================
# OPTIONAL: Other Settings
# ============================================================================

# Token caching (true/false)
# Automatically disabled for mock server (localhost/127.0.0.1)
# Set explicitly to override auto-detection
# USE_AUTH_CACHE=true

# Debug logging (true/false)
# Set to true to see detailed authentication and API call logs
DEBUG=false

# Skip checkout/checkin workflow (true/false)
# Set to false if you want to use checkout/checkin for topic updates
SKIP_CHECKOUT_CHECKIN=true
